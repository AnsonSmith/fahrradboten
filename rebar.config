%% -*-erlang-*-
{erl_opts,
 [debug_info,
  inline_list_funcs,
  warn_deprecated_function,
  warn_export_all,
  warn_export_vars,
  warn_obsolete_guard,
  warn_shadow_vars,
  warn_untyped_record,
  warn_unused_function,
  warn_unused_import,
  warnings_as_errors
 ]}.

{deps,
 [
  {exometer_core, {git, "https://github.com/Feuerlabs/exometer_core.git", {tag, "1.4"}}}
 ]
}.

{dialyzer, [{plt_extra_apps, [exometer_core]}]}.

{cover_enabled, true}.

{xref_checks,
 [undefined_function_calls,
  undefined_functions,
  locals_not_used,
  %% exports_not_used,
  deprecated_function_calls,
  deprecated_functions
 ]}.
